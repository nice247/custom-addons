<odoo>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" class="head_custom" decoration-danger="(is_late)">
                <field name="name"/>
                <field name="owner_id"/>
                <field name="date_availability"/>
                <field name="sale_price"/>
                <field name="garden"/>
                <field name="bedrooms"/>
                <field name="is_late" invisible="1"/>
                <field name="facades" optional="1"/>
                <field name="expected_price" optional="1"/>
                <field name="postcode" optional="1"/>
                <field name="active" optional="1"/>

            </tree>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_draft" type="object" class="btn-primary" string="Set Draft"
                        invisible="status == 'draft'"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="Set Pending"
                        invisible="status != 'draft'"/>
                        <button name="action_approved" type="object" class="btn-success" string="Set Approved"
                        invisible="status != 'pending'"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group string="General Info: ">
                        <field name="date_availability"/>
                        <field name="expected_sale_date"/>
                        <field name="is_late" invisible="1"/>
                        <field name="expected_price"/>
                        <field name="sale_price"/>
                        <field name="deft"/>
                        <field name="living_area"/>
                        <field name="facades"/>
                        <field name="postcode"/>
                        <field name="description"/>
                    </group>

                    <group string="Additional Info: ">
                        <field name="owner_id"/>
                        <field name="owner_phone"/>
                        <field name="garden"/>
                        <field name="garden_area"/>
                        <field name="garden_orientation"/>
                        <field name="bedrooms"/>
                        <field name="garage"/>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="property_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="postcode"/>
                <field name="name"/>

                <filter name="is_garden" string="with garden" domain="[('garden', '=', True)]"/>
                <filter name="group_garden" string="garden" context="{'group_by':'garden'}"/>
            </search>
        </field>
    </record>

    <record id="property_action" model="ir.actions.act_window">
        <field name="name">property action</field>
        <field name="res_model">property</field>
    </record>
    <record id="property_action_closed" model="ir.actions.server">
        <field name="name">Closed</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_closed()
        </field>
    </record>
    <record id="property_expected_date" model="ir.cron">
        <field name="name">Property: Expected Date</field>
        <field name="model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">model.check_expected_sale_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>
    <menuitem
            id="property_menu_item"
            name="Properties"
            parent="properties_menu"
            action="property_action"
    />
</odoo>